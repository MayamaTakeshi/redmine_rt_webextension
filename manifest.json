{
	"manifest_version": 2,
	"name": "redmine_rt",
	"version": "1.0",

  "description": "Connects to Redmine server using WebSocket and send/receive messages",
	"icons": {
		"48": "icons/redmine-48.png"
	},

	"options_ui": {
		"page": "options.html"
	},

	"permissions": [
		"webRequest",
		"*://*/",
		"*://*/*",
		"<all_urls>",
		"notifications",
		"storage",
		"tabs",
		"cookies"
	],

	"browser_action": {
		"default_icon": "icons/redmine-32.png",
		"default_title": "redmine_rt",
		"default_popup": "popup/main.html"
	},

	"background": {
		"scripts": [
			"third_party/action_cable.js",
			"third_party/websocket_rails.0.0.1.min.js",
			"js/redmine_channels.js",
			"js/background.js"
		]
	},

  "applications": {
    "gecko": {
      "id": "b8c12cb8-ae98-4861-9a65-b35e4c59b2e6@test.com",
      "strict_min_version": "42.0"
    }
  }

}
	
