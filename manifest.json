{
	"manifest_version": 2,
	"name": "redmine_rt",
	"version": "1.0",

  "description": "Connects to Redmine server using WebSocket and send/receive messages",
	"icons": {
		"48": "icons/redmine-48.png"
	},

	"options_ui": {
		"page": "options/options.html",
    "browser_style": true
	},

	"permissions": [
		"webRequest",
		"*://*/",
		"*://*/*",
		"<all_urls>",
		"notifications",
		"storage",
		"tabs",
		"cookies"
	],

	"browser_action": {
		"default_icon": "icons/redmine-32.png",
		"default_title": "redmine_rt",
		"default_popup": "popup/main.html"
	},

	"background": {
		"scripts": [
			"third_party/browser-polyfill.js",
			"third_party/action_cable.js",
			"third_party/websocket_rails.0.0.1.min.js",
			"background/redmine_channels.js",
			"background/background.js"
		]
	}
}
	
